---
interface Props {
	theme?: 'light' | 'dark';
}

const { theme = 'light' } = Astro.props;
const logoSrc = theme === 'dark' ? '/logo-bilateral-dark.svg' : '/logo-bilateral.svg';
---

<header class={`site-header site-header--${theme}`}>
	<a href="/" class="site-header__brand">
		<img src={logoSrc} alt="The Limit Case logo" class="site-header__logo" />
		<h1 class="site-header__title">
			The <em>Limit</em> Case
		</h1>
	</a>
</header>

<style>
	.site-header {
		display: flex;
		align-items: center;
		padding: 1rem 2rem;
		position: relative;
		z-index: 100;
	}

	.site-header__brand {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}

	.site-header__brand:hover {
		opacity: 0.8;
	}

	.site-header__logo {
		width: 36px;
		height: 36px;
		display: block;
	}

	.site-header__title {
		font-family: 'Newsreader', Georgia, serif;
		font-size: 1.5rem;
		font-weight: 300;
		margin: 0;
		letter-spacing: -0.02em;
		line-height: 1;
	}

	/* Light theme (default) */
	.site-header--light .site-header__title {
		color: #1a1a1a;
	}

	.site-header--light .site-header__title em {
		font-style: italic;
		color: #c45d3e;
	}

	/* Dark theme */
	.site-header--dark {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: transparent;
	}

	.site-header--dark .site-header__title {
		color: rgba(245, 240, 232, 0.92);
	}

	.site-header--dark .site-header__title em {
		font-style: italic;
		color: #e8764f;
	}

	@media (max-width: 600px) {
		.site-header {
			padding: 0.75rem 1rem;
		}

		.site-header__logo {
			width: 28px;
			height: 28px;
		}

		.site-header__title {
			font-size: 1.25rem;
		}
	}
</style>
